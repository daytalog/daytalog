{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "src/main/**/*", "src/preload/**/*", "src/shared/**/*", "env.local.d.ts"],
  "compilerOptions": {
    "composite": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": ["electron-vite/node"],
    "baseUrl": ".",
    "paths": {
      "@shared/*" : [
        "src/shared/*"
      ],
      "@main/*": [
        "src/main/*"
      ],
      "@core-windows/*": [
        "src/main/core/windows/*"
      ],
      "@resources/*": [
        "resources/*"
      ],
      "@core-utils/*": [
        "src/main/core/utils/*"
      ],
      "@core-logger": [
        "src/main/core/utils/logger"
      ],
      "@int": [
        "src/main/adapters/stubs.ts"
      ],
      "@adapter": [
        "src/main/adapters"
      ]
    }
  }
}
